@model IEnumerable<Anna_Bondarenko_FinalTask.Models.Models.Faculty>

@{
    ViewBag.Title = "GetFaculties";
}
<div>Added Faculties</div>
<table class="table">
    <tr>
        <th>
            <div class="ellipce-for-table-call">  @Html.DisplayNameFor(model => model.Name)</div>
        </th>
        <th>
            <div class="ellipce-for-table-call">@Html.DisplayNameFor(model => model.BudgetPlaces)</div>
        </th>
        <th>
            <div class="ellipce-for-table-call">@Html.DisplayNameFor(model => model.AllPlaces)</div>
        </th>
        <th>
            <div class="ellipce-for-table-call">@Html.DisplayNameFor(model => model.FacultyNumber)</div>
        </th>
        <th>
            <div class="ellipce-for-table-call">@Html.DisplayName("Faculty Status")</div>
        </th>
        <th>
            <div class="ellipce-for-table-call">@Html.DisplayName("Student Status")</div>
        </th>
        <th><div class="ellipce-for-table">Action</div></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="ellipce-for-table-call">@Html.DisplayFor(modelItem => item.Name)</div>
            </td>
            <td>
                <div class="ellipce-for-table-call">  @Html.DisplayFor(modelItem => item.BudgetPlaces)</div>
            </td>
            <td>
                <div class="ellipce-for-table-call"> @Html.DisplayFor(modelItem => item.AllPlaces)</div>
            </td>
            <td>
                <div class="ellipce-for-table-call">  @Html.DisplayFor(modelItem => item.FacultyNumber)</div>
            </td>
            <td>
                <div class="ellipce-for-table-call">  @Html.DisplayName("Added")</div>
            </td>

            <th>
                @if (item.Enrollees.First(e => e.Email == User.Identity.Name).StudentStatuses.Count() > 0 && item.Enrollees.First(e => e.Email == User.Identity.Name).StudentStatuses.First(s => s.Faculty.FacultyNumber == item.FacultyNumber).Status != "Enrollee")
                {
                    <div class="ellipce-for-table-call">   @Html.DisplayFor(m => item.Enrollees.First(e => e.Email == User.Identity.Name).StudentStatuses.First(s => s.Faculty.FacultyNumber == item.FacultyNumber).Status)</div>

                }
                else
                {
                    <div class="ellipce-for-table-call">   @Html.DisplayName("Enrollee")</div>
                }

            </th>
            <td>
                <div class="ellipce-for-table-call">
                    @Html.ActionLink("Details", "FacultyDetails", new { area = "Enrollee", controller = "Enrolle", id = item.Id }) |
                    @Html.ActionLink("Delete", "FacultyDelete", new { area = "Enrollee", controller = "Enrolle", id = item.Id })
                </div>
            </td>
        </tr>
    }

</table>
