@model Anna_Bondarenko_FinalTask.Models.Models.SchoolSubject

@{
    ViewBag.Title = "SchoolSubjectCreate";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessage("SchoolSubjectError", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-lg-7">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-PrewDetails2" />
            </div>
        </div>
    </div>
}

<div class="btn-partial btn">
    @Html.ActionLink("Back to List of school subjects", "GetSchoolSubjects", new { area = "Operator", controller = "SchoolSubject" })
</div>
